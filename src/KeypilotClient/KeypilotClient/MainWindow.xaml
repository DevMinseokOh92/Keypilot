<Window x:Class="KeypilotClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keypilot Overlay" 
        Height="400" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Left="100" Top="100">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow" Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.8"/>
    </Window.Resources>

    <Grid>
        <Border Background="#DD202020" CornerRadius="8" Padding="10">
            <StackPanel>
                <TextBlock Name="StatusText"
                           Text="Keypilot Ready" 
                           Foreground="#00FF00" 
                           FontSize="12" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"
                           HorizontalAlignment="Center"
                           Effect="{StaticResource DropShadow}"/>

                <!-- 추천 리스트 -->
                <ItemsControl Name="SuggestionList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,2" Padding="5" Background="#33FFFFFF" CornerRadius="4">
                                <StackPanel Orientation="Horizontal">
                                    <!-- 기능키 표시 (F1, F2...) -->
                                    <TextBlock Text="{Binding Key}" 
                                               Foreground="#FFFF00" 
                                               FontWeight="Bold" 
                                               Width="30"
                                               Margin="0,0,10,0"/>
                                    <!-- 단어 -->
                                    <TextBlock Text="{Binding Word}" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>